<div class="container">
  <h1><%= current_user.first_name %>'s Profile Edit</h1>

 <%= form_with model: current_user do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, { class: 'form-control', value: current_user.first_name } %>
      </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, { class: 'form-control', value: current_user.last_name } %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, { class: 'form-control', value: current_user.email } %>
    </div>

     <%= f.submit 'Save', { class: 'btn btn-primary' } %>
  <% end %>
</div>