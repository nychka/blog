<div class="container">
  <h1><%= @user.first_name %>'s Profile Edit</h1>

 <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, { id: 'user_first_name', class: 'form-control', value: @user.first_name } %>
      </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, { id: 'user_last_name', class: 'form-control', value: @user.last_name } %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, { id: 'user_email', class: 'form-control', value: @user.email } %>
    </div>

     <%= f.submit 'Save', { class: 'btn btn-primary' } %>
  <% end %>
</div>